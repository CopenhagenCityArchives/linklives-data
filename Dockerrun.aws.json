{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "indexer-code",
            "host": {
                "sourcePath": "/var/app/current/indexer"
            }
        },
        {
            "name": "indexer-data",
            "host": {
                "sourcePath": "/tmp/linklives-data"
            }
        },
        {
            "name": "elasticsearch-data",
            "host": {
                "sourcePath": "/elasticsearch-data"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "linklives-elasticsearch",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/linklives-elasticsearch:latest",
            "essential": true,
            "memory": 28000,
            "environment":[
                {
                    "name": "discovery.type",
                    "value": "single-node"
                },
                {
                    "name": "ES_JAVA_OPTS",
                    "value": "-Xms24g -Xmx24g"
                }
            ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 9200
                },
                {
                    "hostPort": 9300,
                    "containerPort": 9300                  
                }
              ],
              "mountPoints": [
                {
                    "sourceVolume": "elasticsearch-data",
                    "containerPath": "/usr/share/elasticsearch/data",
                    "readOnly": false
                }
            ]
        },
        {
            "name": "indexer",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/linklives-indexer:latest",
            "essential": false,
            "memory": 1024,
            "links": [
                "linklives-elasticsearch"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "indexer-code",
                    "containerPath": "/indexer",
                    "readOnly": false
                },
                {
                    "sourceVolume": "indexer-data",
                    "containerPath": "/indexer-data",
                    "readOnly": true
                }
            ]
        }
    ]
}