{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "elasticsearch-data",
            "host": {
                "sourcePath": "/elasticsearch-data-local"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "linklives-elasticsearch",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/linklives-elasticsearch:latest",
            "essential": true,
            "memory": 28000,
            "environment":[
                {
                    "name": "discovery.type",
                    "value": "single-node"
                },
                {
                    "name": "ES_JAVA_OPTS",
                    "value": "-Xms14g -Xmx14g"
                }
            ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 9200
                },
                {
                    "hostPort": 9300,
                    "containerPort": 9300                  
                }
              ],
              "mountPoints": [
                {
                    "sourceVolume": "elasticsearch-data",
                    "containerPath": "/usr/share/elasticsearch/data",
                    "readOnly": false
                }
            ]
        }
    ]
}